---
import Layout from '../layouts/Layout.astro';
const brand = { emerald: "#042f2e", gold: "#D4AF37", softWhite: "#fcfcfc" };
---

<Layout title="SABM Sovereign Registry">
  <main style={`background: ${brand.emerald}; min-height: 100vh; display: flex; flex-direction: column; align-items: center; justify-content: center; color: white; font-family: serif; text-align: center; margin: 0;`}>
    <div style={`border: 2px solid ${brand.gold}; padding: 60px; max-width: 800px;`}>
      <h1 style={`color: ${brand.gold}; font-size: 3rem; margin: 0 0 20px 0; font-style: italic;`}>The Sovereign Botanical Registry</h1>
      <p style="letter-spacing: 3px; text-transform: uppercase; margin-bottom: 40px; opacity: 0.9;">Intelligence Portal | 2026 Edition</p>
      
      <div style="display: flex; gap: 20px; justify-content: center;">
        <a href="/species/kanna" style={`color: ${brand.emerald}; background: ${brand.gold}; padding: 15px 30px; text-decoration: none; font-weight: bold; text-transform: uppercase; transition: 0.3s;`}>Access Kanna Registry</a>
      </div>
    </div>
  </main>
</Layout>

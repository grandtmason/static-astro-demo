const plants = [
  { id: "kanna", name: "Kanna / Mesembrine", sci: "Sceletium tortuosum", status: "BABS Certified", img: "/Public/sabr_kanna.jpg.jpg" },
  { id: "ginger", name: "African Ginger", sci: "Siphonochilus aethiopicus", status: "NEMBA Ready", img: "/Public/sabr_ginger.jpg.jpg" },

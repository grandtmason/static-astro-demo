---
const species = [
  { name: "African Ginger", latin: "Siphonochilus aethiopicus", img: "sabr_ginger.jpg" },
  { name: "African Potato", latin: "Hypoxis hemerocallidea", img: "sabr_potato.jpg" },
  { name: "Aloe Ferox", latin: "Aloe ferox", img: "sabr_aloe.jpg" },
  { name: "Artemisia Afra", latin: "Artemisia afra", img: "sabr_wormwood.jpg" },
  { name: "Athrixia (Bush Tea)", latin: "Athrixia phylicoides", img: "sabr_bushtea.jpg" },
  { name: "Baobab", latin: "Adansonia digitata", img: "sabr_baobab.jpg" },
  { name: "Buchu", latin: "Agathosma betulina", img: "sabr_buchu.jpg" },
  { name: "Devil's Claw", latin: "Harpagophytum procumbens", img: "sabr_devilclaw.jpg" },
  { name: "Honeybush", latin: "Cyclopia spp.", img: "sabr_honeybush.jpg" },
  { name: "Hoodia", latin: "Hoodia gordonii", img: "sabr_hoodia.jpg" },
  { name: "Kanna / Mesembrine", latin: "Sceletium tortuosum", img: "sabr_kanna.jpg" },
  { name: "Kigelia (Sausage Tree)", latin: "Kigelia africana", img: "sabr_sausage.jpg" },
  { name: "Mphepho", latin: "Helichrysum odoratissimum", img: "sabr_mphepho.jpg" },
  { name: "Pelargonium / Sidoides", latin: "Pelargonium sidoides", img: "sabr_pelargonium.jpg" },
  { name: "Pepper-bark Tree", latin: "Warburgia salutaris", img: "sabr_pepperbark.jpg" },
  { name: "Rooibos", latin: "Aspalathus linearis", img: "sabr_rooibos.jpg" },
  { name: "Uzara", latin: "Xysmalobium undulatum", img: "sabr_uzara.jpg" },
  { name: "Wild Apricot", latin: "Ximenia americana", img: "sabr_apricot.jpg" }
];
---
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SABR | South African Botanical Registry</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Your Specified Palette */
        body { background-color: #ffffff; color: #062310; } /* Very Dark Green Text */
        .pedestal { border: 1px solid #D4AF37; background-color: #ffffff; transition: all 0.3s ease; } /* Thin Gold Border */
        .latin-name { color: #062310; opacity: 0.8; }
        .btn-green { background-color: #062310; color: #ffffff; }
    </style>
</head>
<body class="antialiased">
    <nav class="border-b border-stone-100 py-8 px-12 flex justify-between items-center bg-white">
        <div class="text-2xl font-serif italic font-bold">SABR</div>
        <div class="hidden md:flex space-x-8 text-[10px] uppercase tracking-widest font-bold text-stone-400">
            <span>Compliance</span><span>Oracles</span><span>Heritage</span>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto px-6 py-20">
        <h2 class="text-[#D4AF37] text-[10px] uppercase tracking-[0.4em] mb-4 font-bold">Access & Benefit Sharing Framework</h2>
        <h1 class="text-5xl md:text-7xl font-serif mb-16">The Sovereign Herbarium.</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
            {species.map((p) => (
                <div class="group">
                    <div class="pedestal aspect-[4/5] flex items-center justify-center overflow-hidden">
                        <img 
                            src={p.img} 
                            alt={p.name} 
                            class="w-full h-full object-cover"
                            onerror="this.onerror=null; this.src='/'+this.getAttribute('src');"
                        />
                    </div>
                    <div class="mt-6 text-center md:text-left">
                        <h3 class="text-2xl font-serif italic">{p.name}</h3>
                        <p class="text-[11px] uppercase tracking-widest mt-1 latin-name font-bold">{p.latin}</p>
                        <button class="mt-6 btn-green text-[10px] px-8 py-3 uppercase tracking-widest font-bold hover:opacity-90 transition-opacity">
                            Connect with Farmers
                        </button>
                    </div>
                </div>
            ))}
        </div>
    </main>

    <footer class="py-20 text-center border-t border-stone-100 text-[10px] text-stone-400 uppercase tracking-widest font-bold">
        Â© 2026 South African Botanical Registry
    </footer>
</body>
</html>

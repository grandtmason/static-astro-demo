---
const species = [
  { name: "African Ginger", latin: "Siphonochilus aethiopicus", img: "sabr_ginger.jpg" },
  { name: "African Potato", latin: "Hypoxis hemerocallidea", img: "sabr_potato.jpg" },
  { name: "Aloe Ferox", latin: "Aloe ferox", img: "sabr_aloe.jpg" },
  { name: "Artemisia Afra", latin: "Artemisia afra", img: "sabr_wormwood.jpg" },
  { name: "Athrixia (Bush Tea)", latin: "Athrixia phylicoides", img: "sabr_bushtea.jpg" },
  { name: "Baobab", latin: "Adansonia digitata", img: "sabr_baobab.jpg" },
  { name: "Buchu", latin: "Agathosma betulina", img: "sabr_buchu.jpg" },
  { name: "Devil's Claw", latin: "Harpagophytum procumbens", img: "sabr_devilclaw.jpg" },
  { name: "Honeybush", latin: "Cyclopia spp.", img: "sabr_honeybush.jpg" },
  { name: "Hoodia", latin: "Hoodia gordonii", img: "sabr_hoodia.jpg" },
  { name: "Kanna / Mesembrine", latin: "Sceletium tortuosum", img: "sabr_kanna.jpg" },
  { name: "Kigelia (Sausage Tree)", latin: "Kigelia africana", img: "sabr_sausage.jpg" },
  { name: "Mphepho", latin: "Helichrysum odoratissimum", img: "sabr_mphepho.jpg" },
  { name: "Pelargonium / Sidoides", latin: "Pelargonium sidoides", img: "sabr_pelargonium.jpg" },
  { name: "Pepper-bark Tree", latin: "Warburgia salutaris", img: "sabr_pepperbark.jpg" },
  { name: "Rooibos", latin: "Aspalathus linearis", img: "sabr_rooibos.jpg" },
  { name: "Uzara", latin: "Xysmalobium undulatum", img: "sabr_uzara.jpg" },
  { name: "Wild Apricot", latin: "Ximenia americana", img: "sabr_apricot.jpg" }
];
---
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SABR | South African Botanical Registry</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;1,700&family=Inter:wght@300;400;900&display=swap" rel="stylesheet">
    <style>
        body { background-color: #ffffff; color: #1c1917; }
        .pedestal { border: 1px solid #D4AF37; background-color: #fafaf9; transition: all 0.3s ease; }
        .pedestal:hover { transform: translateY(-5px); box-shadow: 0 10px 20px rgba(0,0,0,0.05); }
    </style>
</head>
<body class="font-['Inter'] antialiased">
    <nav class="border-b border-stone-100 py-10 px-12 flex justify-between items-center bg-white">
        <div class="font-['Playfair_Display'] text-3xl italic font-bold tracking-tighter">SABR</div>
        <div class="hidden md:flex space-x-12 text-[10px] uppercase tracking-[0.3em] font-black text-stone-400">
            <span>Compliance</span><span>Oracles</span><span>Heritage</span>
        </div>
    </nav>
    <main class="max-w-7xl mx-auto px-6 md:px-12 py-24">
        <h2 class="text-[#D4AF37] text-[10px] uppercase tracking-[0.5em] mb-6 font-bold">Access & Benefit Sharing Framework</h2>
        <h1 class="font-['Playfair_Display'] text-6xl md:text-8xl text-stone-900 mb-12">The <span class="italic">Sovereign</span> Herbarium.</h1>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-16">
            {species.map((p) => (
                <div class="group">
                    <div class="pedestal aspect-square flex items-center justify-center p-8">
                        <img src={`/${p.img}`} alt={p.name} class="w-full h-full object-contain" />
                    </div>
                    <div class="mt-8">
                        <h3 class="font-['Playfair_Display'] text-3xl italic text-stone-800">{p.name}</h3>
                        <p class="text-[11px] uppercase tracking-widest text-stone-400 mt-2 font-bold">{p.latin}</p>
                        <button class="mt-8 bg-stone-900 text-white text-[10px] px-8 py-4 uppercase tracking-[0.2em] font-black hover:bg-[#D4AF37] transition-colors">
                            Connect with Farmers
                        </button>
                    </div>
                </div>
            ))}
        </div>
    </main>
    <footer class="py-24 text-center border-t border-stone-100 text-[10px] text-stone-400 uppercase tracking-[0.4em] font-bold">
        Â© 2026 South African Botanical Registry
    </footer>
</body>
</html>

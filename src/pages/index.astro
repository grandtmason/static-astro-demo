---
const plants = [
  { name: "African Ginger", sci: "Siphonochilus aethiopicus", img: "sabr_ginger.jpg" },
  { name: "African Potato", sci: "Hypoxis hemerocallidea", img: "sabr_potato.jpg" },
  { name: "Aloe Ferox", sci: "Aloe ferox", img: "sabr_aloe.jpg" },
  { name: "Artemisia Afra", sci: "Artemisia afra", img: "sabr_wormwood.jpg" },
  { name: "Athrixia (Bush Tea)", sci: "Athrixia phylicoides", img: "sabr_bushtea.jpg" },
  { name: "Baobab", sci: "Adansonia digitata", img: "sabr_baobab.jpg" },
  { name: "Buchu", sci: "Agathosma betulina", img: "sabr_buchu.jpg" },
  { name: "Devil's Claw", sci: "Harpagophytum procumbens", img: "sabr_devilclaw.jpg" },
  { name: "Honeybush", sci: "Cyclopia spp.", img: "sabr_honeybush.jpg" },
  { name: "Hoodia", sci: "Hoodia gordonii", img: "sabr_hoodia.jpg" },
  { name: "Kanna / Mesembrine", sci: "Sceletium tortuosum", img: "sabr_kanna.jpg" },
  { name: "Kigelia (Sausage Tree)", sci: "Kigelia africana", img: "sabr_sausage.jpg" },
  { name: "Mphepho", sci: "Helichrysum odoratissimum", img: "sabr_mphepho.jpg" },
  { name: "Pelargonium / Sidoides", sci: "Pelargonium sidoides", img: "sabr_pelargonium.jpg" },
  { name: "Pepper-bark Tree", sci: "Warburgia salutaris", img: "sabr_pepperbark.jpg" },
  { name: "Rooibos", sci: "Aspalathus linearis", img: "sabr_rooibos.jpg" },
  { name: "Uzara", sci: "Xysmalobium undulatum", img: "sabr_uzara.jpg" },
  { name: "Wild Apricot", sci: "Ximenia americana", img: "sabr_apricot.jpg" }
];
---

<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<title>SABR Registry</title>
	<style>
		body { background: #0a0a0a; color: #e0e0e0; font-family: 'Georgia', serif; margin: 0; padding: 40px 20px; }
		.container { max-width: 1200px; margin: 0 auto; }
		header { text-align: center; border-bottom: 2px solid #c5a059; padding-bottom: 20px; margin-bottom: 40px; }
		h1 { color: #c5a059; text-transform: uppercase; letter-spacing: 4px; font-size: 2.5rem; margin: 0; }
		.subtitle { color: #888; letter-spacing: 2px; text-transform: uppercase; font-size: 0.9rem; margin-top: 10px; }
		.grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 30px; }
		.card { background: #151515; border: 1px solid #222; border-radius: 4px; transition: 0.3s; }
		.card:hover { border-color: #c5a059; transform: translateY(-5px); }
		.card img { width: 100%; height: 300px; object-fit: cover; border-bottom: 1px solid #222; background: #111; }
		.info { padding: 20px; text-align: center; }
		h2 { font-size: 1.3rem; margin: 0 0 5px; color: #fff; }
		p { font-style: italic; color: #c5a059; margin: 0 0 20px; font-size: 0.95rem; }
		.btn { border: 1px solid #c5a059; color: #c5a059; padding: 10px 20px; text-decoration: none; font-size: 0.8rem; text-transform: uppercase; letter-spacing: 1px; transition: 0.3s; }
		.btn:hover { background: #c5a059; color: #000; }
	</style>
</head>
<body>
	<div class="container">
		<header>
			<h1>SABR Botanical Registry</h1>
			<div class="subtitle">Access & Benefit Sharing Framework</div>
		</header>
		<div class="grid">
			{plants.map(plant => (
				<div class="card">
					<img 
						src={"/" + plant.img} 
						alt={plant.name} 
						onerror="this.src='https://placehold.co/400x300/151515/c5a059?text=Filename+Error'" 
					/>
					<div class="info">
						<h2>{plant.name}</h2>
						<p>{plant.sci}</p>
						<a href="#" class="btn">Connect with Farmers</a>
					</div>
				</div>
			))}
		</div>
	</div>
</body>
</html>

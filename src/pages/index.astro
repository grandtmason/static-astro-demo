---
/* SABR NODE 1: THE SOVEREIGN REGISTRY MASTER */
const plants = [
  { id: "ginger", name: "African Ginger", sci: "Siphonochilus aethiopicus", img: "https://commons.wikimedia.org/wiki/Special:FilePath/Siphonochilus_aethiopicus_126-1.jpg?width=800" },
  { id: "potato", name: "African Potato", sci: "Hypoxis hemerocallidea", img: "https://commons.wikimedia.org/wiki/Special:FilePath/Hypoxis_obtusa_-_Curtis_118_pl_7109_%281890%29.jpg?width=800" },
  { id: "ferox", name: "Aloe Ferox", sci: "Aloe ferox", img: "https://commons.wikimedia.org/wiki/Special:FilePath/Aloe_ferox_-_Curtis_34_pl_1413_%281811%29.jpg?width=800" },
  { id: "artemisia", name: "Artemisia Afra", sci: "Artemisia afra", img: "https://commons.wikimedia.org/wiki/Special:FilePath/Artemisia_afra_botanical.jpg?width=800" },
  { id: "athrixia", name: "Athrixia (Bush Tea)", sci: "Athrixia phylicoides", img: "https://commons.wikimedia.org/wiki/Special:FilePath/Athrixia_phylicoides_drawing.jpg?width=800" },
  { id: "baobab", name: "Baobab", sci: "Adansonia digitata", img: "https://commons.wikimedia.org/wiki/Special:FilePath/Adansonia_digitata_-_Koehler%E2%80%93s_Medizinal-Pflanzen-004.jpg?width=800" },
  { id: "buchu", name: "Buchu", sci: "Agathosma betulina", img: "https://commons.wikimedia.org/wiki/Special:FilePath/Agathosma_betulina_-_Koehler%E2%80%93s_Medizinal-Pflanzen-011.jpg?width=800" },
  { id: "devilsclaw", name: "Devil's Claw", sci: "Harpagophytum procumbens", img: "https://commons.wikimedia.org/wiki/Special:FilePath/Harpagophytum_procumbens_botanical.jpg?width=800" },
  { id: "honeybush", name: "Honeybush", sci: "Cyclopia spp.", img: "https://commons.wikimedia.org/wiki/Special:FilePath/Cyclopia_genistoides_botanical.jpg?width=800" },
  { id: "hoodia", name: "Hoodia", sci: "Hoodia gordonii", img: "https://commons.wikimedia.org/wiki/Special:FilePath/Hoodia_gordonii_botanical.jpg?width=800" },
  { id: "kanna", name: "Kanna / Mesembrine", sci: "Sceletium tortuosum", img: "https://commons.wikimedia.org/wiki/Special:FilePath/Sceletium_tortuosum_botanical.jpg?width=800" },
  { id: "kigelia", name: "Kigelia (Sausage Tree)", sci: "Kigelia africana", img: "https://commons.wikimedia.org/wiki/Special:FilePath/Kigelia_africana_botanical.jpg?width=800" },
  { id: "mphepho", name: "Mphepho", sci: "Helichrysum odoratissimum", img: "https://commons.wikimedia.org/wiki/Special:FilePath/Helichrysum_odoratissimum_drawing.jpg?width=800" },
  { id: "pelargonium", name: "Pelargonium / Sidoides", sci: "Pelargonium sidoides", img: "https://commons.wikimedia.org/wiki/Special:FilePath/Pelargonium_sidoides_botanical.jpg?width=800" },
  { id: "warburgia", name: "Pepper-bark Tree", sci: "Warburgia salutaris", img: "https://commons.wikimedia.org/wiki/Special:FilePath/Warburgia_salutaris_drawing.jpg?width=800" },
  { id: "rooibos", name: "Rooibos", sci: "Aspalathus linearis", img: "https://commons.wikimedia.org/wiki/Special:FilePath/Aspalathus_linearis_botanical.jpg?width=800" },
  { id: "uzara", name: "Uzara", sci: "Xysmalobium undulatum", img: "https://commons.wikimedia.org/wiki/Special:FilePath/Xysmalobium_undulatum_drawing.jpg?width=800" },
  { id: "ximenia", name: "Wild Apricot", sci: "Ximenia americana", img: "https://commons.wikimedia.org/wiki/Special:FilePath/Ximenia_americana_-_Koehler%E2%80%93s_Medizinal-Pflanzen-281.jpg?width=800" }
];

const forestBlack = "#06160c"; 
const stoneSage = "#a8a29e";  
---
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SABR | South African Botanical Registry</title>
</head>
<body style="margin:0; background-color:#ffffff; color:#1c1917; font-family:sans-serif;">
    <nav style="border-bottom:1px solid #f5f5f4; padding:40px 60px; display:flex; justify-content:space-between; align-items:center;">
        <div style={`font-size:28px; font-weight:bold; font-family:serif; color:${forestBlack}; letter-spacing:-1px;`}>SABR</div>
        <div style={`text-transform:uppercase; letter-spacing:0.3em; font-size:10px; color:${stoneSage}; font-weight:900;`}>
            <a href="/compliance" style={`text-decoration:none; color:${stoneSage}; margin-right:30px;`}>Compliance</a>
            <span style="margin-right:30px;">Oracles</span>
            <span>Heritage</span>
        </div>
    </nav>

    <div style="max-width:1400px; margin:0 auto; padding:80px 40px;">
        <div style={`text-transform:uppercase; letter-spacing:0.5em; font-size:10px; color:${stoneSage}; margin-bottom:16px; font-weight:900;`}>Access & Benefit Sharing Framework</div>
        <h1 style={`font-family:serif; font-size:60px; font-weight:300; margin:0 0 20px 0; line-height:1.1; color:${forestBlack};`}>South African <i>Botanical</i> Registry</h1>
        <p style={`font-family:serif; font-style:italic; font-size:20px; color:${stoneSage}; margin-bottom:80px;`}>The central archive for indigenous genetic resources and intellectual property.</p>
        
        <div style="display:grid; grid-template-columns: repeat(3, 1fr); gap:80px 40px;">
            {plants.map((plant) => (
                <div id={plant.id} style="display:flex; flex-direction:column; scroll-margin-top: 40px;">
                    <div style="border:1px solid #D4AF37; background-color:#fafaf9; aspect-ratio:3/4; display:flex; align-items:center; justify-content:center; padding:30px; overflow:hidden;">
                        <img 
                            src={plant.img} 
                            alt={plant.name}
                            loading="lazy"
                            style="max-width:90%; height:auto; mix-blend-mode:multiply; opacity:0.9;" 
                            onerror="this.style.display='none'; this.parentNode.style.backgroundColor='#f5f5f4'; this.parentNode.innerHTML='<span style=\'color:#a8a29e; font-size:10px; text-transform:uppercase;\'>Image Archiving...</span>';"
                        />
                    </div>
                    <div style={`font-family:serif; font-style:italic; font-size:28px; margin:25px 0 5px 0; color:${forestBlack};`}>{plant.name}</div>
                    <div style={`text-transform:uppercase; letter-spacing:0.2em; font-size:10px; color:${stoneSage}; font-weight:900; margin-bottom:20px;`}>{plant.sci}</div>
                    
                    <a href={`mailto:governance@sabr.org.za?subject=Inquiry regarding ${plant.name}`} style={`display:inline-block; align-self:flex-start; background:${stoneSage}; color:${forestBlack}; padding:15px 30px; text-decoration:none; font-size:9px; font-weight:900; text-transform:uppercase; letter-spacing:0.2em;`}>Connect with Farmers</a>
                </div>
            ))}
        </div>
    </div>

    <footer style="margin-top:100px; padding:60px; border-top:1px solid #f5f5f4; text-align:center;">
        <div style={`text-transform:uppercase; letter-spacing:0.5em; font-size:9px; color:${stoneSage}; font-weight:900;`}>Â© 2026 South African Botanical Registry</div>
    </footer>
</body>
</html>

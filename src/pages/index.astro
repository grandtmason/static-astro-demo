---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="SABM Compliance Gateway">
	<main>
		<h1>SABM <span class="text-gradient">Compliance Gateway</span></h1>
		<p class="instructions">
			Official Portal for South African Botanical Management.<br />
			<strong>Status:</strong> System Operational.
		</p>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://docs.astro.build/"
				title="Documentation"
				body="Access compliance guidelines and reporting tools."
			/>
		</ul>
	</main>
</Layout>

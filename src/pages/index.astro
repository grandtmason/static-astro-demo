const brand = {
  emerald: "#064e3b",
  stone: "#78716c",
  gold: "#D4AF37",
  alabaster: "#f8fafc"
};
---
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SABM | South African Botanical Registry</title>
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Dataset",
        "name": "South African Botanical Registry",
        "description": "BABS/NEMBA Compliance Gateway for African Phytochemistry."
      }
    </script>
</head>
<body style={`margin:0; background-color:${brand.alabaster}; color:#1c1917; font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif; -webkit-font-smoothing: antialiased;`}>

    <nav style="background:white; border-bottom:1px solid #e2e8f0; padding:15px 20px; display:flex; justify-content:space-between; align-items:center; position:sticky; top:0; z-index:100;">
        <div style={`font-size:20px; font-weight:800; color:${brand.emerald}; letter-spacing:-0.5px;`}>SABM</div>
        <div style={`text-transform:uppercase; letter-spacing:0.1em; font-size:9px; color:${brand.stone}; font-weight:700; border:1px solid #e2e8f0; padding:5px 10px; border-radius:100px;`}>
            Registry Status: <span style="color:#10b981;">Online</span>
        </div>
    </nav>

    <main style="max-width:1200px; margin:0 auto; padding:40px 20px;">
        <header style="margin-bottom:40px;">
            <div style={`text-transform:uppercase; letter-spacing:0.3em; font-size:10px; color:${brand.stone}; margin-bottom:8px; font-weight:800;`}>Access & Benefit Sharing</div>
            <h1 style={`font-size: clamp(32px, 8vw, 48px); font-weight:300; margin:0; color:${brand.emerald}; line-height:1.1;`}>Botanical <i>Compliance</i> Gateway</h1>
        </header>

        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap:25px;">
            {plants.map((plant) => (
                <div style="background:white; border:1px solid #e2e8f0; display:flex; flex-direction:column;">
                    <div style={`background:#f1f5f9; aspect-ratio:4/3; overflow:hidden; border-bottom:1px solid ${brand.gold};`}>
                        <img src={plant.img} alt={plant.name} style="width:100%; height:100%; object-fit:cover;" onerror="this.src='https://placehold.co/600x450/f1f5f9/064e3b/png?text=VERIFYING+ASSET';" />
                    </div>
                    
                    <div style="padding:20px;">
                        <div style="display:flex; justify-content:space-between; align-items:flex-start; margin-bottom:15px;">
                            <div>
                                <h2 style={`font-size:20px; margin:0; color:${brand.emerald}; font-weight:600;`}>{plant.name}</h2>
                                <p style={`font-size:11px; color:${brand.stone}; font-style:italic; margin:2px 0 0 0;`}>{plant.sci}</p>
                            </div>
                            <span style={`font-size:8px; background:${brand.emerald}; color:white; padding:3px 6px; font-weight:bold; text-transform:uppercase;`}>{plant.status}</span>
                        </div>

                        <div style="background:#f8fafc; padding:12px; margin-bottom:20px; border-radius:2px;">
                            <div style="display:flex; justify-content:space-between; font-size:9px; color:${brand.stone}; font-weight:700; text-transform:uppercase;">
                                <span>IK Trust 1.0%</span>
                                <span>SABM 0.5%</span>
                            </div>
                            <div style="height:3px; background:#e2e8f0; margin-top:6px; display:flex;">
                                <div style={`width:66%; background:${brand.gold}; height:100%;`}></div>
                                <div style={`width:34%; background:${brand.emerald}; height:100%;`}></div>
                            </div>
                        </div>

                        <a href={`mailto:compliance@sabr.org.za?subject=Verification Request: ${plant.name}`} 
                           style={`display:block; text-align:center; background:${brand.emerald}; color:white; padding:15px; text-decoration:none; font-size:10px; font-weight:bold; text-transform:uppercase; letter-spacing:0.2em;`}>
                            Verify Supply Chain
                        </a>
                    </div>
                </div>
            ))}
        </div>
    </main>

    <footer style="margin-top:60px; padding:40px 20px; border-top:1px solid #e2e8f0; text-align:center;">
        <p style={`font-size:9px; color:${brand.stone}; letter-spacing:0.1em; line-height:2;`}>

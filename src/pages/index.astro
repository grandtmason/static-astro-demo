---
// Simple list for the build engine
const species = [
  { name: "African Ginger", latin: "Siphonochilus aethiopicus", img: "/Public/sabr_ginger.jpg.jpg" },
  { name: "African Potato", latin: "Hypoxis hemerocallidea", img: "/Public/sabr_potato.jpg.jpg" },
  { name: "Aloe Ferox", latin: "Aloe ferox", img: "/Public/sabr_aloe.jpg.jpg" },
  { name: "Artemisia Afra", latin: "Artemisia afra", img: "/Public/sabr_wormwood.jpg.jpg" },
  { name: "Athrixia (Bush Tea)", latin: "Athrixia phylicoides", img: "/Public/sabr_bushtea.jpg.jpg" },
  { name: "Baobab", latin: "Adansonia digitata", img: "/Public/sabr_baobab.jpg.jpg" },
  { name: "Buchu", latin: "Agathosma betulina", img: "/Public/sabr_buchu.jpg.jpg" },
  { name: "Devil's Claw", latin: "Harpagophytum procumbens", img: "/Public/sabr_devilclaw.jpg.jpg" },
  { name: "Honeybush", latin: "Cyclopia spp.", img: "/Public/sabr_honeybush.jpg.jpg" },
  { name: "Hoodia", latin: "Hoodia gordonii", img: "/Public/sabr_hoodia.jpg.jpg" },
  { name: "Kanna / Mesembrine", latin: "Sceletium tortuosum", img: "/Public/sabr_kanna.jpg.jpg" },
  { name: "Kigelia (Sausage Tree)", latin: "Kigelia africana", img: "/Public/sabr_sausage.jpg.jpg" },
  { name: "Mphepho", latin: "Helichrysum odoratissimum", img: "/Public/sabr_mphepho.jpg.jpg" },
  { name: "Pelargonium / Sidoides", latin: "Pelargonium sidoides", img: "/Public/sabr_pelargonium.jpg.jpg" },
  { name: "Pepper-bark Tree", latin: "Warburgia salutaris", img: "/Public/sabr_pepperbark.jpg.jpg" },
  { name: "Rooibos", latin: "Aspalathus linearis", img: "/Public/sabr_rooibos.jpg.jpg" },
  { name: "Uzara", latin: "Xysmalobium undulatum", img: "/Public/sabr_uzara.jpg.jpg" },
  { name: "Wild Apricot", latin: "Ximenia americana", img: "/Public/sabr_apricot.jpg.jpg" }
];
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SABR Registry</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { background-color: white; color: #062310; font-family: serif; }
        .gold-border { border: 1px solid #D4AF37; }
    </style>
</head>
<body>
    <nav class="border-b p-8 flex justify-between items-center">
        <div class="text-2xl italic font-bold">SABR</div>
    </nav>

    <main class="max-w-6xl mx-auto p-10">
        <h1 class="text-6xl mb-12">The <span class="italic">Sovereign</span> Herbarium.</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
            {species.map((plant) => (
                <div>
                    <div class="gold-border aspect-square mb-4 overflow-hidden bg-stone-50">
                        <img src={plant.img} alt={plant.name} class="w-full h-full object-cover" />
                    </div>
                    <h3 class="text-2xl italic">{plant.name}</h3>
                    <p class="text-xs uppercase tracking-widest text-stone-400 font-sans mt-1">{plant.latin}</p>
                    <button class="mt-4 bg-[#062310] text-white text-[10px] px-6 py-3 uppercase tracking-widest font-bold font-sans hover:bg-[#D4AF37]">
                        Connect with Farmers
                    </button>
                </div>
            ))}
        </div>
    </main>
</body>
</html>
